              <div class="container">
                <div class="row">

                    <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <div class="panel-title"> Add New Item</div>
                                 </div>  
                            <div class="panel-body" >
                                <form action="/add-new-menu" id="passwordform" class="form-horizontal" method="post"  role="form" enctype="multipart/form-data">
                                      <% if(success !=''){%>
                                        <p style="text-align: center;color:green;"><%= success %></p>
                                          <% } %>
                                  <div class="form-group">
                                            <label for="username" class="col-md-3 control-label">Product Category</label>
                                            <div class="col-md-9">
                                               <select class="form-control" name="pass_cat">
                                                   <option value="">Choose Item Category</option>
                                                   <% if(records.length > 0){
                                                    records.forEach(function(row){
                                                    %>
                                                   <option value="<%= row.menuCategory %>"><%= row.menuCategory %></option>
                                                   <%  }) } %>
                                                  </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                          <label for="username" class="col-md-3 control-label">Product Id</label>
                                          <div class="col-md-9">
                                              <input type="textbox" class="form-control" name="pid"  placeholder="Enter Your Project Name">
                                          </div>
                                      </div>

                                      <div class="form-group">
                                        <label for="username" class="col-md-3 control-label">Product Image</label>
                                        <div class="col-md-9">
                                            <input type="file" class="form-control" name="file" >
                                        </div>
                                    </div>

                                        <div class="form-group">
                                          <label for="username" class="col-md-3 control-label">Menu Name</label>
                                          <div class="col-md-9">
                                              <input type="textbox" class="form-control" name="name"  placeholder="Enter Your Project Name">
                                          </div>
                                      </div>
                                      


                                      <div class="form-group">
                                        <label for="username" class="col-md-3 control-label">Price</label>
                                        <div class="col-md-9">
                                            <input type="textbox" class="form-control" name="price"  placeholder="Enter Your Project Name">
                                        </div>
                                    </div>
                                      
                                    

                                    <div class="form-group">
                                        <label for="username" class="col-md-3 control-label">Product Details</label>
                                        <div class="col-md-9">
                                            <textarea class="form-control" id="editor" name="details" rows="5" placeholder="Enter Your Password Details"></textarea>
                                        </div>
                                    </div>
                                   
                                    <div class="form-group">
                                        <!-- Button -->                                        
                                        <div class="col-md-offset-3 col-md-9">
                                        <input type="submit" name="submit" value="Add New Item" class="btn btn-primary">   
                                        </div>
                                    </div>
                                    
                                    <p><a href="/view-all-item">View All Password Lists</a></p>
                                     
                                    
                                    
                                    
                                </form>
                             </div>
                        </div>
            
                   
                   
                    
             </div> 
                </div>
              </div>
              <script>
                CKEDITOR.replace( 'editor' );
            </script>    
              
  </body>
</html>
