 <!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel = 'stylesheet' href = 'mystyle.css'>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <title>shopping cart</title>
</head>
<body>


<h1 class="container" style="color: green;">Shopping Cart</h1>

<div class="shopping-cart">

  <div class="column-labels">
    <label class="product-image">Image</label>
    <label class="product-details">Product</label>
    <label class="product-price">Price</label>
    <label class="product-quantity">Quantity</label>
    <label class="product-removal">Remove</label>
    <label class="product-line-price">Total</label>
  </div>

   
  <% if(records.length>0){
    records.forEach(function(row){
       if(row.pid == 999){
    %>

  
 <div class="product">
    <div class="product-image">
      <img src="./upload/<%= row.file %>">
    </div>
    <div class="product-details">
      <div class="product-title"><%= row.name %></div>
      <p class="product-description"><%- row.details %></p>
    </div>
    <div class="product-price"><%= row.price %></div>
    <div class="product-quantity">
      <input type="number" value="1" min="1">
    </div>
    <div class="product-removal">
      <a class="remove" href="/add-cart/delete/<%= row._id %>" onclick="return confirm('Are you sure?')">Remove</a>
    </div>
    <div class="product-line-price"><%= row.price %></div>
  </div>

  <%    
		}})} %>
  <div class="totals">
    <div class="totals-item">
      <label>Subtotal</label>
      <div class="totals-value" id="cart-subtotal">71.97</div>
    </div>
    <div class="totals-item">
      <label>Tax (5%)</label>
      <div class="totals-value" id="cart-tax">3.60</div>
    </div>
    <div class="totals-item">
      <label>Shipping</label>
      <div class="totals-value" id="cart-shipping">15.00</div>
    </div>
    <div class="totals-item totals-item-total">
      <label>Grand Total</label>
      <div class="totals-value" id="cart-total">90.57</div>
    </div>
  </div>
      <a href="/Home"> 
      <button class="checkout">Checkout</button></a>

</div>

<script src='script.js'></script>
</body>
</html>