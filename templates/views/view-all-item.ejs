              <div class="container">
                <div class="row">
                    <h1>View Password Lists</h1>
                    <br>
                 <table class="table table-striped table-primary">
                  <thead>
                    <tr>
                      <th>Product Category</th>
                      <th>Product Id</th>
                      <th>Product Name</th>
                      <th>Product Image</th>
                      <th>Price</th>
                      <th>Product Detais</th>
                      <th>Action</th>


                    </tr>
                  </thead>
                  <tbody>
                   <% if(records.length>0){
                    records.forEach(function(row){
                   
                    %>
                    <tr>
                      <td><%= row.pass_cat %></td>
                      <td><%= row.pid %></td>
                      <td><%= row.name %></td>
                      <td>
                        <div class="col-md-4">
                          <img src="./upload/<%= row.file %>" alt="image" style="width: 50px; margin: 5px auto;">
                      </div>
                      </td>
                      <td><%= row.price %></td>
                      <td><%- row.details %></td>
                      <td>
                          
                        <a class="btn btn-primary btn-xs" href="/password-detail/edit/<%= row._id %>"><i class="fa fa-edit"></i></a>
                        <a class="btn btn-danger btn-xs" href="/password-detail/delete/<%= row._id %>" onclick="return confirm('Are you sure?')"><i class="fa fa-trash"></i></a>
                      </td>
                    </tr>
                    <!-- Modal -->
      
                    <%    
                  })} %>
                  </tbody>
                </table>
               
      
              
