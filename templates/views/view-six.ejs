              <div class="container">
                <div class="row">
                    <h1>Six Seater Dining Lists</h1>
                    <br>
                 <table class="table table-striped table-primary">
                  <thead>
                    <tr>
                      <th>Table Name</th>
                       <th>Table Id</th>
                       <th>Seat Status</th>
                    </tr>
                  </thead>
                  <tbody>
                   <% if(records.length >0){
                    records.forEach(function(row){
                    %>
                    <tr>
                      <td>
                        <%= row.tname %>
                      </td>

                     <td>
                        <%= row.tid %>
                     </td>
                     <td>
                      <% if(row.tid == 999){ %>
                        <a href="/sixa/edit/<%= row._id %>"><button type="button" class="btn btn-danger">Make Available</button></a>
                      <% } else { %>
                      <a href="/sixb/edit/<%= row._id %>"><button type="button" class="btn btn-success">Make Booked</button></a>
                        <% } %>
                    </td>

                    </tr>
                    <%  }) } %>
                  </tbody>
                </table>
              </div>
            </div>


  </body>
</html>
